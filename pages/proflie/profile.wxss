/* pages/proflie/profile.wxss */
.profile_head{
  height: 300rpx;
  display: flex;
  align-items: flex-end;
  /* background-image: url(""); */
}
.head_cont{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding:0rpx 35rpx 55rpx 35rpx;
}
.cont_avatarUrl{
  margin-right: 40rpx;

}
.avatr_img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.avarstyle{
  font-size: 102rpx !important;
  /* color: var(--themecolor); */
}
.but_login{
  width: 230rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: rgba(247, 234, 234, 1);
  background-color: rgba(44, 43, 43, 0.3);
  border-radius: 32rpx;
}
.but_loginhover{
  background-color: rgba(136, 130, 130, 0.2);
}
.weui-cell_active{
  background-color: rgba(247, 245, 245, 0.7);
}

.weui-cells{
  border-bottom:10rpx solid rgba(230, 224, 224, 0.5);
  font-size: 30rpx;
  color: rgb(66, 64, 64);
}
.weui-cell_access{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  border-bottom: 2rpx solid rgba(218, 209, 209, 0.4);
}
.weui-cell__hd{
  width: 70rpx;
  line-height: 44rpx;
  height: 44rpx;
  text-align: center;
  /* padding: 0 28rpx; */
}
.weui-cell__title{
  width: 250rpx;
  text-align: left;
}
.weui-cell__ft{
  /* text-align: right; */
  flex-grow: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: rgba(185, 176, 176, 0.7);
  font-size: 24rpx;
  padding-right: 10rpx;
}
.icon-style{
  font-size: 40rpx !important;
}